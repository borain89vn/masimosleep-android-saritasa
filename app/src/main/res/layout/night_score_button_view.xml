<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <Button
            android:id="@+id/night_button"
            android:layout_width="64dp"
            android:layout_height="70dp"
            android:background="@drawable/night_score_button"
            android:text="Night 10"
            android:textColor="@drawable/night_score_button_text"
            android:textSize="10dp"
            android:textAppearance="@style/roundedButton_WhiteText"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp"
            android:paddingBottom="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            style="?android:attr/borderlessButtonStyle" />

        <TextView
            android:id="@+id/number_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/onboardingTitle"
            android:textColor="@color/black"
            android:elevation="20dp"
            android:text="77"
            android:textSize="16dp"
            android:paddingTop="10dp"
            android:layout_marginLeft="12dp"
            android:outlineProvider="none"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <View
            android:id="@+id/dot_view"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:elevation="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="4dp"
            android:outlineProvider="none"
            android:background="@drawable/green_dot"
            app:layout_constraintTop_toTopOf="@id/number_text"
            app:layout_constraintBottom_toBottomOf="@id/number_text"
            app:layout_constraintEnd_toStartOf="@id/number_text"
            style="?android:attr/selectableItemBackgroundBorderless"
            />

</androidx.constraintlayout.widget.ConstraintLayout>