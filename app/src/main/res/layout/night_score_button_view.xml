<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1">

    <Button
        android:id="@+id/night_button"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="64dp"
        android:layout_height="70dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:background="@drawable/night_score_button"
        android:paddingBottom="24dp"
        android:textAppearance="@style/roundedButton_WhiteText"
        android:textColor="@drawable/night_score_button_text"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Night 10" />

    <TextView
        android:id="@+id/number_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:elevation="20dp"
        android:outlineProvider="none"
        android:paddingTop="10dp"
        android:text="77"
        android:textAppearance="@style/onboardingContentBold"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/dot_view"
        style="?android:attr/selectableItemBackgroundBorderless"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/green_dot"
        android:elevation="20dp"
        android:outlineProvider="none"
        app:layout_constraintBottom_toBottomOf="@id/number_text"
        app:layout_constraintEnd_toStartOf="@id/number_text"
        app:layout_constraintTop_toTopOf="@id/number_text" />

</androidx.constraintlayout.widget.ConstraintLayout>