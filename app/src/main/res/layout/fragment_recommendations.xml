                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/snore_desc_text"
                    android:layout_width="0dp"
                    android:layout_height="22dp"
                    android:layout_margin="8dp"
                    android:textAppearance="@style/onboardingContent"
                    android:textColor="@color/darkText"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="@string/reco_snore_subtitle"
                    app:layout_constraintStart_toEndOf="@id/snore_icon"
                    app:layout_constraintEnd_toStartOf="@id/snore_arrow"
                    app:layout_constraintBottom_toBottomOf="@id/snore_icon" />

                <Button
                    android:id="@+id/snore_button"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_margin="8dp"
                    android:background="#00000000"
                    android:textAppearance="@style/onboardingSubHeader"
                    android:text="@string/reco_snore_title"
                    android:textSize="18sp"
                    android:gravity="start|center"
                    android:paddingLeft="108dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/beer_tray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
