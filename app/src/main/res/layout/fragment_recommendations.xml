                <TextView
                    android:id="@+id/more_sleep_desc_text"
                    android:layout_width="0dp"
                    android:layout_height="22dp"
                    android:layout_margin="8dp"
                    android:textAppearance="@style/onboardingContent"
                    android:textColor="@color/darkText"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="@string/reco_more_sleep_subtitle"
                    app:layout_constraintStart_toEndOf="@id/more_sleep_icon"
                    app:layout_constraintEnd_toStartOf="@id/more_sleep_arrow"
                    app:layout_constraintBottom_toBottomOf="@id/more_sleep_icon" />

                <Button
                    android:id="@+id/more_sleep_button"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_margin="8dp"
                    android:background="#00000000"
                    android:textAppearance="@style/onboardingSubHeader"
                    android:text="@string/reco_more_sleep_title"
                    android:textSize="18sp"
                    android:gravity="start|center"
                    android:paddingLeft="108dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/maintain_tray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <ImageView
                    android:id="@+id/maintain_icon"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:src="@drawable/reco_maintain"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
                <ImageView
                    android:id="@+id/maintain_arrow"
                    android:layout_width="30dp"
                    android:layout_height="80dp"
                    android:src="@drawable/forward_arrow"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp"
