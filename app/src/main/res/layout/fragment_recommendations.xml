                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/beer_desc_text"
                    android:layout_width="0dp"
                    android:layout_height="22dp"
                    android:layout_margin="8dp"
                    android:textAppearance="@style/onboardingContent"
                    android:textColor="@color/darkText"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="@string/reco_beer_subtitle"
                    app:layout_constraintStart_toEndOf="@id/beer_icon"
                    app:layout_constraintEnd_toStartOf="@id/beer_arrow"
                    app:layout_constraintBottom_toBottomOf="@id/beer_icon" />

                <Button
                    android:id="@+id/beer_button"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_margin="8dp"
