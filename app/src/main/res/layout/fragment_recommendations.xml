<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#00000000"
    tools:context=".ui.night_report.recommendations.RecommendationsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_tray"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <ImageView
            android:id="@+id/rec_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/rec_icon"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/rec_title"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:text="@string/sleep_improvement_tips"
            android:textAppearance="@style/onboardingContent"
            android:textColor="@color/darkText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@id/rec_icon"
            app:layout_constraintTop_toTopOf="parent" />


        <View
            android:id="@+id/layout_div"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightDiv"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rec_title" />

        <LinearLayout
            android:id="@+id/rec_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/layout_div"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/coffee_tray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/coffee_icon"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:src="@drawable/reco_coffee"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <ImageView
                android:id="@+id/coffee_arrow"
                android:layout_width="30dp"
                android:layout_height="80dp"
                android:src="@drawable/forward_arrow"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/coffee_desc_text"
                android:layout_width="0dp"
                android:layout_height="22dp"
                android:layout_margin="8dp"
                android:textAppearance="@style/onboardingContent"
                android:textColor="@color/darkText"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="@string/reco_coffee_subtitle"
                app:layout_constraintStart_toEndOf="@id/coffee_icon"
                app:layout_constraintEnd_toStartOf="@id/coffee_arrow"
                app:layout_constraintBottom_toBottomOf="@id/coffee_icon" />

            <Button
                android:id="@+id/coffee_button"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:background="#00000000"
                android:textAppearance="@style/onboardingSubHeader"
                android:text="@string/reco_coffee_title"
                android:textSize="18sp"
                android:gravity="start|center"
                android:paddingLeft="108dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/snore_tray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

