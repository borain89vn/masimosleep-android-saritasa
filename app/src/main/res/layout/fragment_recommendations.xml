                    android:textColor="@color/darkText"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="@string/reco_meds_subtitle"
                    app:layout_constraintStart_toEndOf="@id/meds_icon"
                    app:layout_constraintEnd_toStartOf="@id/meds_arrow"
                    app:layout_constraintBottom_toBottomOf="@id/meds_icon" />

                <Button
                    android:id="@+id/meds_button"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_margin="8dp"
                    android:background="#00000000"
                    android:textAppearance="@style/onboardingSubHeader"
                    android:text="@string/reco_meds_title"
                    android:textSize="18sp"
                    android:gravity="start|center"
                    android:paddingLeft="108dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />
